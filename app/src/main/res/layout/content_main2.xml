<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/front_page"
        tools:context=".FrontPageActivity">

    <fragment
            android:layout_width="0dp"
            android:layout_height="533dp" android:name="palla_boitard_mubanzo.readroid.PostListFragment"
            android:id="@+id/postFragment"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Nouveau Post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addPostButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.209" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/postFragment" app:layout_constraintVertical_bias="0.571"/>
    <Button
            android:text="Profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/addPostButton" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.147" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/postFragment" app:layout_constraintVertical_bias="0.571"/>
</android.support.constraint.ConstraintLayout>