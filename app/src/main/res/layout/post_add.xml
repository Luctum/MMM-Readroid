<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/postForm"
                                             android:paddingLeft="10dp" android:paddingStart="10dp">

    <EditText
            android:layout_width="390dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/titleForm" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:hint="Title" android:paddingLeft="10dp" android:paddingRight="10dp"/>
    <EditText
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:background="@android:color/transparent"
            android:ems="10"
            android:id="@+id/contentForm" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titleForm" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Content of the post"
            android:paddingLeft="10dp" android:paddingRight="10dp"/>
</android.support.constraint.ConstraintLayout>