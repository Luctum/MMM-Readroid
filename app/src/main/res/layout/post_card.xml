<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ProfileInfoActivity" android:maxHeight="120dp">

    <android.support.v7.widget.CardView
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="86dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="645dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.564" android:layout_height="110dp"
            android:layout_width="0dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="@+id/star"
                app:layout_constraintTop_toBottomOf="@+id/star"
                android:id="@+id/describe">

            <TextView
                    android:text="Title"
                    android:layout_width="244dp"
                    android:layout_height="42dp"
                    android:id="@+id/postTitle"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:paddingTop="10dp"
            />

            <TextView
                    android:text="User"
                    android:layout_width="63dp"
                    android:layout_height="20dp"
                    android:id="@+id/postAuthor"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/postTitle"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.728"
                    android:layout_marginTop="2dp" android:textAlignment="textEnd"/>

            <TextView
                    android:text="time"
                    android:layout_width="98dp"
                    android:layout_height="28dp"
                    android:id="@+id/postTimestamp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp" android:textAlignment="textEnd" android:paddingRight="10dp"
                    android:paddingTop="10dp" android:layout_marginTop="16dp"/>

            <TextView
                    android:text="Describe"
                    android:layout_width="355dp"
                    android:layout_height="68dp"
                    android:id="@+id/postContent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="2dp" android:layout_marginStart="8dp" android:paddingTop="10dp"
                    android:paddingLeft="10dp"/>

            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="42dp"
                    app:srcCompat="@drawable/star_disable"
                    android:id="@+id/star"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
